                    "$ref": "#/definitions/entities.OTPPurpose"
                }
            }
        },
        "dto.ResendOTPResponse": {
            "type": "object",
            "properties": {
                "expires_in": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "dto.SendOTPRequest": {
            "type": "object",
            "required": [
                "phone_number"
            ],
            "properties": {
                "phone_number": {
                    "type": "string"
                },
                "purpose": {
                    "$ref": "#/definitions/entities.OTPPurpose"
                }
            }
        },
        "dto.SendOTPResponse": {
            "type": "object",
            "properties": {
                "expires_in": {
                    "type": "integer"
                },
                "id": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "dto.VerifyOTPRequest": {
            "type": "object",
            "required": [
                "code",
                "phone_number"
            ],
            "properties": {
                "code": {
                    "type": "string"
                },
                "phone_number": {
                    "type": "string"
                },
                "purpose": {
                    "$ref": "#/definitions/entities.OTPPurpose"
                }
            }
        },
        "dto.VerifyOTPResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                },
                "verified_at": {
                    "type": "string"
                }
            }
        },
        "entities.OTPPurpose": {
            "type": "string",
            "enum": [
                "verification",
                "login",
                "reset"
            ],
            "x-enum-varnames": [
                "PurposeVerification",
                "PurposeLogin",
                "PurposeReset"
            ]
        }
    }
}